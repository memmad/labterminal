extends ../layout

block content
     .row
        .col-sm-8
            h2#a Products
        .col-sm-4
            a(href="/products/add", class="btn btn-success float-right", id="e" ) Add New Product    
        table.table
            thead#f
                tr
                
                    th Name
                    th Price
                    th Description
                    
            tbody
                each product in products
                    tr
                      
                        td=product.name
                        td=product.price
                        td=product.Description
                        
                        td
                            a(href="/products/delete/"+product._id, class="btn btn-danger" , id="g") Delete
                            a(href="/products/edit/"+product._id, class="btn btn-warning", id="h") Edit
                            a(href="/products/cart/"+product._id, class="btn btn-info", id="i") Add To Cart