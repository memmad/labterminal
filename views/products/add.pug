extends ../layout

block content
    h3#a Add New Product
        form(action="/products/add",method="post", id="b")
            .form-group
                label(for="name") Name
                input#name(type="text",class="form-control", name="name")
            .form-group
                label(for="price") Price
                input#price(type="text",class="form-control", name="price")
            .form-group
                label(for="Description") Details
                input#Description(type="text",class="form-control", name="Description")
                input(type="submit", class="btn btn-info", id="l" )