extends ../layout

block content
    h3#a Edit
        form(action="/products/edit/"+product._id,method="post", id="b")          
            .form-group
                label(for="name") Name
                input#name(type="text",class="form-control", name="name", value= product.name)
            .form-group
                label(for="price") Price
                input#price(type="text",class="form-control", name="price", value= product.price)
            .form-group
                label(for="Description") Details
                input#Description(type="text",class="form-control", name="Description", value= product.Description)
                input(type="submit", class="btn btn-info", id="l")