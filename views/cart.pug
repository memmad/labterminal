extends layout

block content
  h2#a My Shopping Cart
   - var total=0;
    table.table
      thead#f
      
        th Name
        th Price
        th Description
       
      tbody
        each item in cart
         - total +=Number(item.price)
          tr#j
            td=item.name
            td=item.price
            td
              a(href="/products/cart/remove/"+item._id, class="btn btn-danger", id="k") Remove Item
      tfoot
        tr
          td Total
          td=total